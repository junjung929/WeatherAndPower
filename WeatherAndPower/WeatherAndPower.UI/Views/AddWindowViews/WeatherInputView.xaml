        <Border  Grid.Row="3" Grid.Column="0">
            <Label   Content="City :" />
        </Border>
        <Border  Grid.Row="3" Grid.Column="1">
            <TextBox  x:Name="CityName" Text="{Binding CityName}"  Padding="5" />
        </Border>

        <Border  Grid.Row="4" Grid.ColumnSpan="3">
